<div class="container">
<%# Formulario para engine con todos sus atributos . %>
<%= form_with(model: engine) do |form| %>
  <% if engine.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(engine.errors.count, "error") %> prohibited this engine from being saved:</h2>

      <ul>
        <% engine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre: REAC-numero o TURBO-numero", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Descripcion", style: "display: block" %>
    <%= form.text_field :description %>
  </div>

<div class="mt-3">
    <%= form.label :feature_id, "Tipo de Equipo", style: "display: block" %>
    <%= form.collection_select :feature_id, @features, :id, :name %>
  </div>

<div class="form-group mt-3 mb-3 ">
<%= form.label :image, "Imagen Motor" %>
<%= form.file_field :image, class:"form-controller" %>
</div>

  <div>
    <%= form.submit "Crear Motor" %>
  </div>
<% end %>
</div>