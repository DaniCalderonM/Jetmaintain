<p style="color: green"><%= notice %></p>
<div class="container">
<h1 class="mb-3"><u>Motores para Mantenimiento</u></h1>
<%# Tabla de boostrap con scope para lograr el alcance a las variables
ubicadas en la vista parcial _engine.html.erb %>
<div id="engines">
<table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tipo de Equipo</th>
          <th scope="col">Nombre Motor</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Foto motor</th>
          <th scope="col">Ver</th>
        </tr>
      </thead>
      <tbody>
<%# Realizamos una iteracion para que muestre en la vista index todos los registros de
engines creados %>
        <% @engines.each do |engine| %>
    <%= render engine %>
        <% end %>
      </tbody>
    </table>


<%= link_to "Nuevo Motor", new_engine_path, class:"btn btn-success" %>
<div class="mt-3 mb-3">
<%# Implementacion de pagy poara paginacion con bootstrap %>
<%= raw pagy_bootstrap_nav(@pagy) %>
</div>
</div>