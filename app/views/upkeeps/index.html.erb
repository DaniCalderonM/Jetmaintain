<p style="color: green"><%= notice %></p>
<div class="container">
<h1><u>Mantenimientos Motores</u></h1>
<%# Tabla de boostrap con scope para lograr el alcance a las variables
ubicadas en la vista parcial _upkeep.html.erb %>
<div id="upkeeps">
<table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tipo de Motor</th>
          <th scope="col">Tipo de mantenimiento</th>
          <th scope="col">Nombre del Motor</th>
          <th scope="col">Foto motor</th>
          <th scope="col">Ver</th>
        </tr>
      </thead>
      <tbody>
    <%# Realizamos una iteracion para que muestre en la vista index todos los registros de
    upkeeps creados %>
       <% @upkeeps.each do |upkeep| %>
    <%= render upkeep %>
        <% end %>
      </tbody>
    </table>


<%= link_to "Nuevo Mantenimiento", new_upkeep_path, class:"btn btn-success" %>
<div class="mt-3 mb-3">
<%# Implementacion de pagy poara paginacion con bootstrap %>
<%= raw pagy_bootstrap_nav(@pagy) %>
</div>
</div>